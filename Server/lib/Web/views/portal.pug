extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_kkutu.css')

block Middle
	+separator(5)
	
	.notification
	div(style='float: right; margin-top: -322px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
				div#server-list(style='height: 300px;')
			div#server-list
	.container
		div(style='width:200px;height:200px;background-color:rgba(0, 0, 0, 0.5);float:left;display:inline-block;')
			h3#holder(style='padding-top:10px;')
			img#logo(style='display:block;height:100px;margin:0 auto;', src='/stor.png', title='PING STORE')
			a(target='_blank', href='https://discord.gg/xgYVD5Se3D', style='display:block;height:180px;margin:0 auto;', src='/stor.png', title='PING STORE')= L('CREATOR')
		iframe#kkutu-bulletin(style='margin-bottom:0px', width='100%', height='220px', src='/kkutu_bulletin.html')
	div(style='float: right; width: calc(40% - 9.5px); vertical-align:middle; height: 130px; background-color: rgba(0, 0, 0, 0);')

